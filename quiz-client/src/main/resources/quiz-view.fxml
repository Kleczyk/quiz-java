<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.quizclient.controller.QuizController">
    <children>
        <Label text="Enter your name:" />
        <TextField fx:id="nameField" />
        <Button text="Start Quiz" onAction="#startQuiz" />
        <VBox fx:id="quizContainer" spacing="10" />
        <Button text="Submit Answers" onAction="#submitAnswers" />
        <Label fx:id="scoreLabel" />
    </children>
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>
</VBox>
