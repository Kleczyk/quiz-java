<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.qc.controller.IntroController" spacing="15" alignment="CENTER" prefHeight="800" prefWidth="400">
    <children>
        <Label text="Aplikacja Quiz" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
        <Label text="Wprowadź swoje imię:" />
        <TextField fx:id="nameField" />
        <Button text="Rozpocznij Quiz" onAction="#startQuiz" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
    </children>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
</VBox>
