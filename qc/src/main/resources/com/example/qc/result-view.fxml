<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.qc.controller.ResultController" spacing="15" alignment="CENTER" prefHeight="400" prefWidth="400">
    <children>
        <Label text="Quiz Application" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
        <Label fx:id="scoreLabel" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: green;" />
        <Button fx:id="restartQuizButton" text="Restart Quiz" onAction="#restartQuiz" style="-fx-background-color: #FF9800; -fx-text-fill: white;" />
    </children>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
</VBox>
